.student-container {
  width: 100vw;
  height: 160rpx;
  background-color: #fff;
  box-shadow: 0px 10px 79px 0px #f7f7f7;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.student-info {
  width: 620rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-direction: column;
}

.student-info .name {
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
  color: #343432;
}

.student-info .time {
  width: 100%;
  font-size: 28rpx;
  color: #343432;
}

.student-info .detail {
  width: 100%;
  font-size: 28rpx;
  color: #343432;
}