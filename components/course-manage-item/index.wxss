/* components/order-item/index.wxss */

@import '/style/global.wxss';

.container {
  height: 230rpx;
  padding: 20rpx;
  justify-content: space-between;
  background-color: #fff;
  box-sizing: border-box;
  margin-top: 25rpx;
}

.container .image {
  width: 280rpx;
  height: 210rpx;
  border-radius: 10rpx;
}

.container .info {
  margin-left: 16rpx;
  flex: 1;
  justify-content: space-between;
  align-items: flex-start;
  height: 100%;
}

.container .info .title {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
  width: 100%;
}

.container .info .course-total {
  font-size: 24rpx;
  color: #999;
  width: 100%;

}

.container .info .handle {
  justify-content: flex-end;
  width: 100%;

}

.container .info .handle .handle-refund {
  color: #DC4428;
  font-size: 26rpx;
  color: #fff;
  border-radius: 10px;
  padding: 10rpx 20rpx;
  background-color: #DC4428;

}

.container .info .handle .handle-btn {
  background-color: var(--theme-color);
  color: #fff;
  border-radius: 10px;
  padding: 10rpx 20rpx;
  margin-left: 20rpx;
}