.classSchedule-item {
  width: 100%;
  min-height: 80rpx;
  padding: 20rpx;
  margin-bottom: 8rpx;
  background-color: #fff;
}

.classSchedule-item .btn {
  display: flex;
  justify-content: flex-end;
  padding-right:40rpx;
  box-sizing: border-box;
}

.classSchedule-item .btn .evaluation {
  width: 150rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #12AE85;
  border-radius: 20rpx;
  color: #fff;
}

.classSchedule-item .btn .content {
  width: 100%;
  padding: 10rpx 0;
  margin-top: 10rpx;
  border-top: 1rpx solid #f3f3f3;
}