.container {
  width: 100vw;
  min-height: 100vh;
  background-color: var(--bg-color);
}

.banner-box {
  width: 100vw;
  height: 400rpx;
}
swiper{
  height: 400rpx;
}
.swiper-item {
  width: 100vw;
  height: 400rpx;
  background-color: var(--theme-color);
}
.swiper-item image{
  width: 100%;
  height: 100%;
}
.btn-list {
  width: 100vw;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  margin-bottom: 20rpx;
}

.btn-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.btn-item .icon {
  width: 90rpx;
  height: 90rpx;
  /* background: #ccc; */

}

.btn-item .text {
  color: #101010;
  font-size: 24rpx;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}