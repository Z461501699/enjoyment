<!-- pages/school/school.wxml -->
<header-select class="header-select" hasPosition='{{true}}' selectTitles="{{selectTitles}}" selectOptions="{{selectOptions}}" bind:change="change" bind:handleSearch="handleSearch" />
<view style='width:100%; height:127px' />
<block wx:for="{{schoolList}}" wx:key="*this">
	<school-item title="{{item.SchoolName}}" url="{{item.Logo}}" address="{{item.Address}}" data-id="{{item.Id}}" bind:toDetail="toDetail"></school-item>
</block>

