.flex-row {
  display        : flex;
  flex-direction : row;
  align-items    : center;
  justify-content: space-around;
}

.flex-column {
  display        : flex;
  flex-direction : column;
  align-items    : center;
  justify-content: space-around;
}

.fill-tab {
  width     : 100%;
  height    : 55px;
  background: rbga(255, 255, 255, 1);
}

.hidden-beyond {
  overflow     : hidden;
  white-space  : nowrap;
  text-overflow: ellipsis;
}