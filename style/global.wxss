.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.flex-between {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.fill-tab {
  width: 100%;
  height: 55px;
  background: rbga(255, 255, 255, 1);
}

.hidden-beyond {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.load-all {
  width: 100%;
  font-size: 22rpx;
  font-weight: 500;
  color: rgba(143, 154, 168, 1);
  line-height: 100rpx;
  text-align: center;
}
